{
  "name": "@bitswired-web/graphql",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn codegen && tsc --build",
    "codegen": "apollo client:codegen src/interfaces.ts --target=typescript --endpoint=http://localhost:3000/graphql --outputFlat  ",
    "clean": "tsc --build --clean && rimraf src/interfaces.ts",
    "hook:check": "echo PASS"
  },
  "dependencies": {
    "graphql": "^15.5.0",
    "graphql-tag": "^2.12.4"
  },
  "devDependencies": {
    "@yarnpkg/pnpify": "^3.0.0-rc.6",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.2"
  }
}
